{
    "manifest_version": 2,
    "name": "Progaholic",
    "version": "1.0",

    "description": "Shows how much you contributed today. Strive for the dark green! Contribute more for the greater good! Be a progaholic!",

    "author": "Dmitry Savenko",
    "homepage_url": "https://github.com/dsavenko/progaholic",

    "icons": {
        "128": "icon.png"
    },

    "permissions": [
        "storage",
        "https://api.github.com/*"
    ],

    "background": {
        "scripts": ["x.js", "bg.js"]
    },

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["x.js", "cs.js"]
    }],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
